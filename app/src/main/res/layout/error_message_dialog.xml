    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/_50sdp"-->
    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->
    <!--android:text=""-->
    <!--android:textColor="@color/default_color"-->
    <!--android:textSize="@dimen/dimen_15" />-->

    <!--</ScrollView>-->


    <TextView
        android:id="@+id/tvDiscountDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/img_view"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="21dp" />


    <LinearLayout
        android:id="@+id/llYesNo"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDiscountDesc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_shape_red"
            android:backgroundTint="@color/lightning_background_dark_color"
            android:padding="10dp"
            android:text="CLOSE"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>

